@using AnnualReports.Web.ViewModels.BarModels
@model IEnumerable<AnnualReports.Web.ViewModels.BarModels.BarDetailsViewModel>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.BarNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DisplayName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MapToBarId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Year)
        </th>
        @*<th></th>*@
    </tr>
    @if (Model.Any())
    {

        foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.BarNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DisplayName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MapToBarId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Year)
                </td>
                @*<td>
                        @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
                        @Html.ActionLink("Details", "Details", new { id=item.Id }) |
                        @Html.ActionLink("Delete", "Delete", new { id=item.Id })
                    </td>*@
            </tr>
        }
    }
    else
    {
        <tr>
            <td colspan="4">
                <span class="label label-info">No data match the search criteria!</span>
            </td>
        </tr>

    }

</table>
